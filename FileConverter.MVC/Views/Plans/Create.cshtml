@model FileConverter.MVC.Models.Plans.CreatePlanModel

@{
    ViewData["Title"] = "Create Plan";
}

<h2>Create Plan</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="MonthlyPrice" class="form-label"></label>
        <input asp-for="MonthlyPrice" class="form-control" />
        <span asp-validation-for="MonthlyPrice" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="MaxConversionPerMonth" class="form-label"></label>
        <input asp-for="MaxConversionPerMonth" class="form-control" />
        <span asp-validation-for="MaxConversionPerMonth" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="MaxUploadBytes" class="form-label"></label>
        <input asp-for="MaxUploadBytes" class="form-control" />
        <span asp-validation-for="MaxUploadBytes" class="text-danger"></span>
    </div>

    <div class="form-group form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
